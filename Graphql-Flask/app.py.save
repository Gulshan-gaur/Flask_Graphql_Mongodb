from flask import Flask, request, jsonify
from database import connection

# initialise flask object
app = Flask(__name__)

# database connection
connect_db = connection.Database()
db = connect_db.db
# Create home route
@app.route('/')

@app.route("/add_one")
def add_one():
    db.user.insert_one({'title': "ullu", 'body': "pullu"})
    return "success"
@app.route("/")
def home():
    todos = db.user.find()
    return jsonify([todo for todo in todos])
if __name__ == '__main__':
  app.run(debug=True)
